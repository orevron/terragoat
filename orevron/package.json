{
    "name": "bridgecrew",
    "version": "0.193.0",
    "description": "BridgeCrew Platform - Code Cloud Security",
    "main": "index.js",
    "directories": {
        "test": "tests"
    },
    "config": {
        "unsafe-perm": true
    },
    "scripts": {
        "update-nx": "node ./devTools/update-nx-graph/index scan --apply=false",
        "build-oas": "tsoa spec",
        "build-packages": "cd devTools/cache-dir && yarn install --ignore-engines --cache-folder=\".yarn-cache\" --check-files --pure-lockfile --network-timeout 1000000 && node cache-dir.mjs fetch ../../src/packages || (cd ../../src/packages && npm run build && cd ../../ && node devTools/cache-dir/cache-dir.mjs cache src/packages) && nx run oas-tools:bootstrap",
        "coverage": "nyc npm run test",
        "coverage-jenkins": "npm run test-ts && nyc --reporter=cobertura env IS_OFFLINE=true npm run test",
        "coverage-badge": "istanbul-cobertura-badger -r coverage/cobertura-coverage.xml -d ./coverage -b nodejs-badge",
        "coverage-remediations": "node tests/coverage/remediation-coverage.js",
        "create-dalLayer": "cd src/packages/dal-layer && yarn build-dev && yarn link && cd ../../ && yarn link @bridgecrew/dal-layer",
        "create-okta-config": "cd devTools/generate-okta-aws-config && npm i && node index.js",
        "github": "mocha --timeout 60000 tests/unit/nodeTests/github/*.js",
        "eslint": "eslint src -c \".eslintrc.js\"",
        "eslint-fix": "eslint src -c \".eslintrc.js\" --fix",
        "test-ts": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\",\"resolveJsonModule\":true}' mocha -r ts-node/register 'tests/unit/**/*.ts'",
        "test-node-tests": "mocha --timeout 120000 --retries 3 tests/unit/nodeTests/**/*.js",
        "test": "mocha --timeout 120000 --retries 3 tests/unit/**/*.js",
        "preci": "rm -rf node_modules",
        "ci": "yarn install --frozen-lockfile",
        "clean-node-modules": "find . -name 'node_modules' -type d -prune -exec rm -rf {} +",
        "clean-ts-types": "find . -name 'types' -type d -prune -exec rm -rf {} +",
        "clean-ts-build": "find . -name 'build' -type d -prune -exec rm -rf {} +",
        "clean-tsoa": "find . -name 'tsoa-build' -type d -prune -exec rm -rf {} +",
        "clean-mochawesome": "find . -name 'mochawesome-report' -type d -prune -exec rm -rf {} +",
        "clean-all": "yarn clean-node-modules && yarn clean-ts-types && yarn clean-ts-build && yarn clean-tsoa && yarn clean-mochawesome",
        "refresh-local-env": "yarn clean-all && yarn ci && yarn build-packages",
        "install-build-all": "zx ./devTools/zx-scripts/install-build-all.mjs"
    },
    "repository": "git+https://github.com/bridgecrewio/platform.git",
    "devDependencies": {
        "@babel/preset-typescript": "^7.13.0",
        "@bridgecrew/api": "link:./src/packages/api",
        "@bridgecrew/authorization": "link:./src/packages/authorization",
        "@bridgecrew/bc-offline-debug": "link:./devTools/bc-offline-debug",
        "@bridgecrew/dal-layer": "link:./src/packages/dal-layer",
        "@bridgecrew/definition-language": "link:./src/packages/definition-language",
        "@bridgecrew/events": "link:./src/packages/events",
        "@bridgecrew/feature-flags": "link:./src/packages/feature-flags",
        "@bridgecrew/functional-utils": "link:./src/packages/functional-utils",
        "@bridgecrew/models": "link:./src/packages/models",
        "@bridgecrew/no-write-remediations": "^0.3.36",
        "@bridgecrew/nodeUtils": "link:./src/packages/nodeUtils",
        "@bridgecrew/prisma": "link:./src/packages/prisma",
        "@bridgecrew/resource-types": "link:./src/packages/resource-types",
        "@bridgecrew/vcs-ssm-mgr": "link:./src/packages/vcs-ssm-mgr",
        "@bridgecrew/vcs-utils": "link:./src/packages/vcs-utils",
        "@bridgecrew/websocket": "link:./src/packages/websocket",
        "@nrwl/cli": "^15.3.3",
        "@nrwl/devkit": "13.10.4",
        "@nrwl/nx-plugin": "^15.3.3",
        "@nrwl/workspace": "13.10.4",
        "@types/archiver": "^5.3.1",
